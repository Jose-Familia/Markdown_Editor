---
import Layout from '../layouts/Layout.astro';
import MarkdownEditor from '../components/MarkdownEditor.astro';
---

<Layout title="Markdown Editor">
  <main class="bg-white p-4 flex flex-col flex-grow">
    <h1 class="flex justify-center items-center text-center text-4xl font-bold mb-6">Markdown Editor with Astro 🧑‍🚀🌍</h1>
    <MarkdownEditor />
  </main>
  <footer class="bg-gray-800 text-white p-4 text-center mt-auto">
    <p>Created with 🤍 by <a href="https://github.com/Jose-Familia">Jose Familia</a></p>
  </footer>
</Layout>

:global(body) {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  margin: 0;
}

main {
  flex-grow: 1;
}

.container {
  height: 100%; 
}

footer {
  flex-shrink: 0;
}
