<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 h-full">
    <!-- Editor -->
    <div class="border border-gray-200 rounded-lg h-full flex flex-col">
      <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
        <h2 class="text-sm font-medium text-gray-700">Editor</h2>
      </div>
      <textarea
        id="editor"
        class="flex-grow w-full p-4 font-mono text-sm resize-none focus:outline-none overflow-y-auto"
        placeholder="Write your markdown here..."
      ></textarea>
    </div>

    <!-- Preview -->
    <div class="border border-gray-200 rounded-lg h-full flex flex-col">
      <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
        <h2 class="text-sm font-medium text-gray-700">Preview</h2>
      </div>
      <div
        id="preview"
        class="prose max-w-none flex-grow p-4 overflow-y-auto"
      >
      </div>
    </div>
  </div>
</div>
